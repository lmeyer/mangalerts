{% extends "layout/base.twig" %}

{% block content %}
    <div class="row">
        <div class="span5">
            <div class="step clearfix">
                <i class="icon-search icon-4x icon-muted pull-left"></i> <h2>Search for teams</h2>
                <p class="lead">
                    Search for the teams you want to be alerted when they post a new anime.
                </p>
                <div class="page-header"></div>
            </div>
            <div class="step clearfix">
                <i class="icon-envelope-alt icon-4x icon-muted pull-left"></i> <h2>Save your alerts</h2>
                <p class="lead">
                    Give your email and save your alerts.
                </p>
                <div class="page-header"></div>
            </div>
            <div class="step clearfix">
                <i class="icon-save icon-4x icon-muted pull-left"></i> <h2>Receive emails</h2>
                <p class="lead">
                    Each time the team will post a new anime, you will receive an <a href="#email-example" data-toggle="modal">email</a>.
                </p>
                <div id="email-example" class="modal hide fade">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h3>Email example</h3>
                    </div>
                    <div class="modal-body">
                        <h4>New post from Mirage-Team !</h4>
                        A new post named <a target="_blank" href="http://www.mirage-team.com/Fansub-Actualite-news=804">One Piece - AOV Special Arlong Arc</a> as been published. You can go to read it by clicking on the link below.
                        <br />
                        <br />
                        -----------------------------------------------------------------
                        <br />
                        <a target="_blank" href="http://www.mirage-team.com/Fansub-Actualite-news=804">http://www.mirage-team.com/Fansub-Actualite-news=804</a>
                        <br />
                        -----------------------------------------------------------------
                        <br />
                        <br />
                        You are receiving this e-mail message because you have registered to alerts at <a href="#">www.mangalerts.com</a>
                    </div>
                    <div class="modal-footer">
                        <a href="#" data-dismiss="modal" aria-hidden="true" class="btn">Close</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="span7">
            <h2><i class="icon-circle-arrow-right"></i> Create your alerts</h2>
            <div class="row">
                <div class="span3">
                    <form action="{{ path('homepage') }}" method="post">
                        {{ form_errors(form) }}
                        {% for key,field in form if 'hidden' not in field.all['block_prefixes'] %}
                            <div class="control-group {% if field.vars.errors|length > 0 %}error{% endif %}">
                                {{ form_label(field, null, { 'label_attr': {'class': 'control-label'}}) }}
                                <div class="controls">
                                    {% set attr = field.all['attr'] %}

                                    {% if (attr['add-on'] is defined) and (attr['add-on'] != '') %}
                                    <div class="input-{{ attr['add-on'] }}">
                                        {% if (attr['add-on'] == 'prepend') and (attr['add-on-text'] != '') %}
                                            <span class="add-on">{{ attr['add-on-text'] }}</span>
                                        {% endif %}
                                        {% endif %}

                                        {{ form_widget(field) }}

                                        {% if (attr['add-on'] is defined) and (attr['add-on-text'] != '') %}
                                            {% if attr['add-on'] == 'append' %}
                                                <span class="add-on">{{ attr['add-on-text'] }}</span>
                                            {% endif %}
                                        {% endif %}

                                        {% if (attr['add-on'] is defined) and (attr['add-on'] != '') %}
                                    </div>
                                    {% endif %}

                                    {% if attr['data-help'] is defined and attr['data-help'] is not empty %}
                                        <p class="help-block">{{ attr['data-help'] }}</p>
                                    {% endif %}
                                </div>
                            </div>
                            {% if btns[loop.index] is defined %}
                                <div class="control-group">
                                    <label class="control-label">{{ btns[loop.index]['label'] }}</label>
                                    <div class="controls">
                                        <input type="submit" class="{{ btns[loop.index]['class'] }}" value='{{ btns[loop.index]['value'] }}' >
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                        {{ form_rest(form) }}
                        <div class="control-group">
                            <label class="control-label"></label>
                            <div class="controls">
                                <input class="btn btn-inverse" type="submit" name="submit" />
                            </div>
                        </div>
                    </form>
                </div>
                <div class="span4">
                    <h4>Team top 10 <small>(Click on a team to add it)</small></h4>
                    {% if topten %}
                        <ol>
                            {% for team in topten if team.url is not empty %}
                                <li><a href="#" attr-value="{{ team.id }}" class="topten-team"><i class="icon-plus-sign"></i> {{ team.name }}</a> (<a class="site" href="{{ team.url }}">link</a>)</li>
                            {% endfor %}
                        </ol>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}