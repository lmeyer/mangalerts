{% extends "layout/base.twig" %}

{% block content %}
    <div class="row">
        <div class="span6">
            <h2>Home</h2>
            <h4>Les teams</h4>

            {% if teams %}
                <ul>
                    {% for team in teams if team.url is not empty %}
                        <li><a href="{{ team.url }}">{{ team.name }}</a></li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
        <div class="span6">
            <div class="row">
                <div class="span3">
                    <h2>Alerts</h2>
                    <form action="#" method="post">
                        {{ form_widget(form) }}
                        <br />
                        <input class="btn btn-inverse" type="submit" name="submit" />
                    </form>
                </div>
                <div class="span3">
                    <h4>Top 10</h4>
                    {% if topten %}
                        <ol>
                            {% for team in topten if team.url is not empty %}
                                <li><a href="#" attr-value="{{ team.id }}" class="topten-team label label-info"><i class="icon-plus icon-white"></i></a> <a href="{{ team.url }}">{{ team.name }}</a></li>
                            {% endfor %}
                        </ol>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}