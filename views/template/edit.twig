{% extends "layout/base.twig" %}

{% block content %}
    <div class="row">
        <div class="span6">
            <div class="row">
                <h2>Edit</h2>
                <div class="span3">
                    <h2>Alerts</h2>
                    <form action="{{ path('alert_edit', {code: code, hash: hash}) }}" method="post">
                        {{ form_widget(form) }}
                        <br />
                        <input class="btn btn-inverse" type="submit" name="submit" />
                    </form>
                </div>
                <div class="span3">
                    <h4>Top 10</h4>
                    {% if topten %}
                        <ol>
                            {% for team in topten if team.url is not empty %}
                                <li><a href="#" attr-value="{{ team.id }}" class="topten-team label label-info"><i class="icon-plus icon-white"></i></a> <a href="{{ team.url }}">{{ team.name }}</a></li>
                            {% endfor %}
                        </ol>
                    {% endif %}
                    <a href="#delete-modal" class="btn btn-danger" data-toggle="modal">Delete</a>
                </div>
                <div class="span3">
                    <div id="delete-modal" class="modal hide fade">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h3>Delete Alerts</h3>
                        </div>
                        <div class="modal-body">
                            <p>You are about to delete your alerts, this procedure is irreversible.</p>
                            <p>Do you want to proceed?</p>
                        </div>
                        <div class="modal-footer">
                            <a href="#" class="btn" data-dismiss="modal" aria-hidden="true">No</a>
                            <a href="{{ path('alert_delete', {code: code, hash: hash}) }}" class="btn btn-danger">Yes</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}