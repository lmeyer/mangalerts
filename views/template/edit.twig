{% extends "layout/base.twig" %}

{% block content %}
    <div class="row">
        <div class="span12">
            <h2><i class="icon-pencil"></i> Edit alerts</h2>
            <div class="row">
                <div class="span3">
                    <form action="{{ path('alert_edit', {code: code, hash: hash}) }}" method="post">
                        {{ form_widget(form) }}
                        <br />
                        <input class="btn btn-inverse" type="submit" name="submit" />
                    </form>
                    <a href="#delete-modal" class="btn btn-danger" data-toggle="modal">Delete my alerts</a>
                </div>
                <div class="span3">
                    <h4>Top 10</h4>
                    {% if topten %}
                        <ol>
                            {% for team in topten if team.url is not empty %}
                                <li><a href="#" attr-value="{{ team.id }}" class="topten-team"><i class="icon-plus-sign"></i> {{ team.name }}</a> (<a class="site" href="{{ team.url }}">link</a>)</li>
                            {% endfor %}
                        </ol>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block footer_js %}
    <div id="delete-modal" class="modal hide fade">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3>Delete Alerts</h3>
        </div>
        <div class="modal-body">
            <p>You are about to delete your alerts, this procedure is irreversible.</p>
            <p>Do you want to proceed?</p>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal" aria-hidden="true">No</a>
            <a href="{{ path('alert_delete', {code: code, hash: hash}) }}" class="btn btn-danger">Yes</a>
        </div>
    </div>
{% endblock %}